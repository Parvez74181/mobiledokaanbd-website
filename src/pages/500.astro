---
export const prerender = true;
import { Image } from "astro:assets";
import Button from "../components/Button.astro";
import notFound from "../../public/404-svg.svg";
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 | Not Found | MobilePriceBD">
  <main class="min-h-screen flex justify-center flex-col items-center">
    <Image
      src={notFound}
      class="rounded-md object-contain"
      width={300}
      height={226}
      alt="404-pagenot-found"
    />
    <p class="text-xl my-5">Oops! Seems something happend in server!</p>
    <a href={"/"} class="mb-10 mt-5">
      <Button text={"Try Again"} />
    </a>
  </main>
</Layout>
