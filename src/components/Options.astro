    <span><strong>Display:</strong></span>
    <Image
      src={listIcon}
      alt="list-icon"
      class="list-icon cursor-pointer p-2 hover:bg-green-100"
      height={40}
      width={40}
    />
    <Image
      src={gridIcon}
      alt="grid-icon"
      class="grid-icon cursor-pointer p-2 hover:bg-green-100"
      height={40}
      width={40}
    />
  </div>
</div>

<!-- filter options -->
