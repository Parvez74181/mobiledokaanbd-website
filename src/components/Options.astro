<script async defer>
  window.addEventListener("DOMContentLoaded", () => {
    const gridIocn = document.querySelector(".grid-icon");
    const listIocn = document.querySelector(".list-icon");
    const wrapper = document.querySelector(".wrapper");
    const filterOptionsBox = document.querySelector(".filter-options");
    const filterOptionsBtn = document.querySelector("#filterBtn");

    filterOptionsBtn.addEventListener("click", () => {
      filterOptionsBox.classList.toggle("hidden");
    });

    listIocn.addEventListener("click", () => {
      wrapper.classList.remove(
        "grid-cols-2",
        "md:grid-cols-3",
        "xl:grid-cols-4"
      );
      wrapper.classList.add("list-view");
    });

    gridIocn.addEventListener("click", () => {
      wrapper.classList.add("grid-cols-2", "md:grid-cols-3", "xl:grid-cols-4");
      wrapper.classList.remove("list-view");
    });
  });
</script>
